<section class="interaction-data">
  <% @user.recent_posts.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id) do %>
      <div class="user-recent-post">
        <p class="post-title"><strong>Post</strong> : <%= post.title %></p>
        <p class="post-text"><%= post.text %></p>
        <div class="comment-info">
      <p class="comment-text">
        Comments: <%= post.comments_counter || 0 %>,<br> Likes: <%= post.likes_counter || 0 %>
      </p>
    </div>
      </div>
    <% end %>
  <% end %>
</section>