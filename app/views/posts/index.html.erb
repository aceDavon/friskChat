<section>
  <%= link_to "Create new Post", new_user_post_path(@user) %>
  <div class="container">
    <div class="image-container">
      <img src=<%= @user.photo %> class="img-contained" />
    </div>
    <div class="txt-container">
      <span class="txt-box"><%= @user.name %></span>
      <span class="posts-count">
        Posts Count: <%= @user.posts.length %>
      </span>
    </div>
  </div>
  <div class='user-posts post-info'>
    <% @user.posts.each do |post| %>
      <div class='list-posts'>
        <h5><%= link_to post.title, user_post_path(@user, post) %></h5>
        <p><%= post.text %></p>
        <span class='like-comment'>
          Comments: <%= post.comments_counter || 0 %>, 
          Likes: <%= post.likes_counter || 0 %> 
        </span>
      </div>
      <ul class='post-comment'>
        <% if post.last_five %>
          <p>No comments added!</p>
        <% else %>
          <% post.last_five.each do |comment| %>
            <li><%= comment.users.name %>: <%= comment.text %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </div>
</section>